{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"lib": ["esnext", "dom"],
		"plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
		"types": ["jest"]
	},
	"exclude": ["**/node_modules", "**/.*/"],
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
